<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.enhabyto.bmiapp.changeAge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">






    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/unable_to_display_background"
        android:scaleType="fitCenter"
        android:src="@drawable/back_change_frags"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true" />




    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_background_black"
        android:padding="20dp"
        android:id="@+id/agel1"
        >
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker_age_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="70dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/red"
            app:np_max="80"
            app:np_min="2"
            app:np_selectedTextColor="@color/white"
            app:np_selectedTextSize="25dp"
            app:np_textColor="@color/red"
            app:np_textSize="15dp"
            app:np_orientation="vertical"
            android:layout_gravity="center"
            app:np_value="25" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set"
        android:background="@drawable/rounded_background_red"
        android:id="@+id/change_age_frag_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/agel1"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:contentDescription="@string/unable_to_display_background"
        android:layout_alignRight="@+id/agel1"
        android:background="@drawable/tick"
        android:layout_alignTop="@id/agel1"
        android:padding="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/tick_change_age"
        android:visibility="invisible"
        />


    </RelativeLayout>
</FrameLayout>
