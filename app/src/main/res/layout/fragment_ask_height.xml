<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/height_background"
    tools:context="com.enhabyto.bmiapp.AskHeight">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:id="@+id/relativeHeight"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_background_black"
        android:contentDescription="@string/unable_to_display_background"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearHeight"
        android:weightSum="4"
        android:layout_alignTop="@+id/relativeHeight"
        android:layout_alignStart="@id/relativeHeight"
        android:layout_alignEnd="@id/relativeHeight"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker_feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="50dp"
            app:np_height="160dp"
            app:np_dividerColor="@color/red"
            app:np_max="7"
            app:np_min="2"
            app:np_selectedTextColor="@color/white"
            app:np_selectedTextSize="25dp"
            app:np_textColor="@color/red"
            app:np_textSize="15dp"
            app:np_orientation="vertical"
            android:layout_weight="1"
            app:np_value="5" />

        <TextView
            android:id="@+id/textView_feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="feet"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker_inches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="50dp"
            app:np_height="160dp"
            app:np_dividerColor="@color/red"
            app:np_max="11"
            app:np_min="0"
            app:np_selectedTextColor="@color/white"
            app:np_selectedTextSize="25dp"
            app:np_textColor="@color/red"
            app:np_textSize="15dp"
            app:np_orientation="vertical"
            android:layout_weight="1"
            app:np_value="9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inches"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/textView_inches"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearHeight1"
        android:layout_below="@id/linearHeight"
        android:weightSum="2"
        android:layout_alignStart="@id/relativeHeight"
        android:layout_alignEnd="@id/relativeHeight"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="160dp"
            app:np_height="50dp"
            app:np_dividerColor="@color/red"
            app:np_max="241"
            app:np_min="61"
            app:np_selectedTextColor="@color/white"
            app:np_selectedTextSize="25dp"
            app:np_textColor="@color/red"
            app:np_textSize="15dp"
            app:np_orientation="horizontal"
            android:layout_weight="1.5"
            app:np_value="175" />

        <TextView
            android:id="@+id/textView_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/relativeHeight"
        android:layout_alignStart="@id/relativeHeight"
        android:layout_alignEnd="@id/relativeHeight"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
          >

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ft_to_cm"
            android:id="@+id/ft_to_cm_btn"
            android:contentDescription="@string/unable_to_display_background"
            />

        <ImageButton
            android:id="@+id/cm_to_ft_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/cm_to_ft"
            android:layout_marginStart="110dp"
            android:contentDescription="@string/unable_to_display_background" />

    </LinearLayout>



      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_background_red"
        android:id="@+id/set_age"

        />



</RelativeLayout>
