<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/height_background"
    tools:context="com.enhabyto.bmiapp.AskHeight">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_background_black"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOU ARE "
        android:gravity="center"
        android:textSize="35sp"
        android:id="@+id/textView_you_are"
        android:layout_marginTop="140dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TALL"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/textView_tall"
        android:layout_marginTop="420dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="feet"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/number_picker_inches"
        android:id="@+id/textView_feet"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:layout_marginTop="245dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="inches"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignStart="@+id/number_picker_inches"
        android:id="@+id/textView_inches"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="245dp"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="cm"
    android:gravity="center"
    android:textSize="15sp"
    android:layout_alignStart="@+id/number_picker_inches"
    android:id="@+id/textView_cm"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:layout_marginTop="370dp"
    />

     <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker_feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginStart="70dp"
        android:layout_marginTop="170dp"
        app:np_width="50dp"
        app:np_height="140dp"
        app:np_dividerColor="@color/red"
        app:np_max="7"
        app:np_min="2"
        app:np_selectedTextColor="@color/white"
        app:np_selectedTextSize="25dp"
        app:np_textColor="@color/red"
        app:np_textSize="15dp"
        app:np_orientation="vertical"
        app:np_value="5" />



    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker_inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="170dp"
        app:np_width="50dp"
        app:np_height="140dp"
        app:np_dividerColor="@color/red"
        app:np_max="11"
        app:np_min="0"
        app:np_selectedTextColor="@color/white"
        app:np_selectedTextSize="25dp"
        app:np_textColor="@color/red"
        app:np_textSize="15dp"
        app:np_orientation="vertical"
        app:np_value="9" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker_cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="345dp"
        app:np_width="160dp"
        app:np_height="50dp"
        app:np_dividerColor="@color/red"
        app:np_max="80"
        app:np_min="2"
        app:np_selectedTextColor="@color/white"
        app:np_selectedTextSize="25dp"
        app:np_textColor="@color/red"
        app:np_textSize="15dp"
        app:np_orientation="horizontal"
        app:np_value="25" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:background="@drawable/rounded_background_red"
        android:id="@+id/set_age"
        />



</RelativeLayout>
