<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/age_background"
    tools:context="com.enhabyto.bmiapp.AskAge">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_background_black"
        android:padding="20dp"
        android:id="@+id/agel1"
        >
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="70dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/red"
            app:np_max="80"
            app:np_min="2"
            app:np_selectedTextColor="@color/white"
            app:np_selectedTextSize="25dp"
            app:np_textColor="@color/red"
            app:np_textSize="15dp"
            app:np_orientation="vertical"
            android:layout_gravity="center"
            app:np_value="25" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set"
        android:background="@drawable/rounded_background_red"
        android:id="@+id/set_age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/agel1"

        />






</RelativeLayout>
