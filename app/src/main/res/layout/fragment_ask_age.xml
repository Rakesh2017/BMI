<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/age_background"
    tools:context="com.enhabyto.bmiapp.AskAge">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/relative"
        android:background="@drawable/rounded_background_black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignRight="@+id/relative"
        android:layout_alignLeft="@id/relative"
        android:layout_alignTop="@id/relative"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_age_Text"
            android:text="WHAT\nIS\nYOUR\nAGE?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/red"
            app:np_max="80"
            app:np_min="2"
            app:np_selectedTextColor="@color/white"
            app:np_selectedTextSize="25dp"
            app:np_textColor="@color/red"
            app:np_textSize="15dp"
            app:np_orientation="vertical"
            android:layout_weight="0"
            app:np_value="25" />




    </LinearLayout>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_background_red"
        android:id="@+id/set_age"
        android:layout_below="@id/relative"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>
